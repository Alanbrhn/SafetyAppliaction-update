@model IEnumerable<SafetyAppliaction.Models.Request>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.PotentialDangerousPoint)</th>
            <th>@Html.DisplayNameFor(model => model.TheMostDangerPoint)</th>
            <th>@Html.DisplayNameFor(model => model.KeyWord)</th>
            <th>@Html.DisplayNameFor(model => model.FormNo)</th>
            <th>@Html.DisplayNameFor(model => model.Departement)</th>
            <th>@Html.DisplayNameFor(model => model.Section)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Time)</th>
            <th>Status</th> <!-- New column for StatusName -->
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="11" class="text-center">No data available</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.PotentialDangerousPoint)</td>
                    <td>@Html.DisplayFor(modelItem => item.TheMostDangerPoint)</td>
                    <td>@Html.DisplayFor(modelItem => item.KeyWord)</td>
                    <td>@Html.DisplayFor(modelItem => item.FormNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Departement)</td>
                    <td>@Html.DisplayFor(modelItem => item.Section)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Time)</td>
                    <td>
                        @if (item.StatusId == 1)
                        {
                            <span>Waiting Checking</span>
                        }
                        else if (item.StatusId == 2)
                        {
                            <span>Checked</span>
                        }
                        else if (item.StatusId == 3)
                        {
                            <span>Reviewed</span>
                        }
                        else if (item.StatusId == 4)
                        {
                            <span>Approved DeptHead</span>
                        }
                        else if (item.StatusId == 5)
                        {
                            <span>Approved Manager</span>
                        }
                        else if (item.StatusId == 6)
                        {
                            <span>Rejected</span>
                        }
                        else
                        {
                            <span>Unknown Status</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.RequestId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.RequestId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
